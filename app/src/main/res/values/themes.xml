<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast"     parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- parent="Theme.AppCompat.NoActionBar" -->
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/project_background</item>
        <item name="colorPrimaryDark">@color/project_background</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">16sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>

        <item name="android:textColor">@color/white</item>
    </style>


    <!-- dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
    </style>

</resources>